{% extends 'layout.html.twig' %}

{% block title %}Compte{% endblock %}


{% block body %}
    <h1 class="text-center">Mon Compte</h1>

    <div class="container">

        <div class="d-flex flex-column justify-content-between m-3 p-2 bg-dark-color rounded flex-wrap">

            <p class="text-secondary m-2">Informations :</p>

            <p class="m-3">{{ app.user.firstname }}</p>
            <p class="m-3">{{ app.user.lastname }}</p>
            <p class="m-3">{{ app.user.address }}</p>
            <p class="m-3">{{ app.user.phone }}</p>
            <p class="m-3">{{ app.user.email }}</p>

            <a href="{{ path('account_edit', {'id': app.user.id}) }}" class="m-3"><p class="btn btn-outline-secondary">
                    Éditer mes informations <i class="fas fa-user-edit"></i></p>
            </a>

        </div>

        <h1 class="text-center mt-5">Mes réservations</h1>

        {% for reservation in app.user.reservation %}
        <div class="d-flex flex-column justify-content-between m-3 p-2 bg-dark-color rounded flex-wrap">

            <p class="text-secondary m-2">{{ reservation.town }}</p>

            <p class="m-3"><i class="fas fa-calendar-alt"></i> {{ reservation.date|date('d F Y') }}
            </p>
            <p class="m-3"><i class="fas fa-map-marker-alt"></i> {{ reservation.roomAddress }}</p>
            <p class="m-3"><i class="fas fa-tags"></i> {{ reservation.price > 0 ? reservation.price ~ ' €' : 'gratuit' }}
            </p>



        </div>
        {% endfor %}

        <a class="btn btn-secondary m-3" href="{{ path('index') }}"><p class="m-0">Retour à l'Accueil</p></a>
    </div>
{% endblock %}
