{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="container w-100 text-light p-5 d-flex flex-column align-items-center login-form pb-5">
        <div class="w-100">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
            <div class="mb-3">
                Vous êtes déjà connecté avec l'adresse '{{ app.user.username }}'
            </div>
            {% else %}

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   required
                   autofocus>
        </div>

        <div class="mt-3 w-100">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        </div>
        <button class="btn btn-lg btn-primary mt-5" type="submit">
            Connexion
        </button>

        {% endif %}
    </form>
{% endblock %}
