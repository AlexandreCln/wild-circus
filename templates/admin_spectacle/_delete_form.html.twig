<form method="post" action="{{ path('admin_spectacles_delete', {'id': spectacle.id}) }}" onsubmit="return confirm('Voulez vous supprimer ce spectacle ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ spectacle.id) }}">
    <button class="btn btn-primary m-2">Supprimer</button>
</form>
