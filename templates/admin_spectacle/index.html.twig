{% extends 'layout.html.twig' %}

{% block title %}Admin - Spectacles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="m-3 mt-5">Spectacles</h1>

        <div class="row m-3 mb-5">
            <div class="col-lg-4 col-12 bg-dark-color rounded p-3">
                {{ form_start(form) }}
                {{ form_label(form) }}
                <a href="{{ path('admin_spectacles_index') }}" class="float-right"><i class="fas fa-sync text-secondary"></i></a>
                {{ form_widget(form) }}
                <button class="btn btn-outline-secondary w-100">Rechercher</button>
                {{ form_end(form) }}
            </div>
        </div>

        <a class="btn btn-secondary m-3" href="{{ path('admin_spectacles_new') }}">Ajouter <i
                    class="fas fa-plus-circle"></i></a>

        {% for spectacle in spectacles %}

            <div class="d-flex justify-content-between m-3 p-2 bg-dark-color rounded text-light flex-wrap">

                <div class="d-flex w-75 flex-wrap">
                    <p class="m-3 mx-auto">{{ spectacle.town }}</p>
                    <p class="m-3 mx-auto">{{ spectacle.date ? spectacle.date|date('d M Y') : '' }}</p>
                    <p class="m-3 mx-auto">{{ spectacle.date ? spectacle.date|date('H:i') : '' }}</p>
                </div>

                <div class="d-flex flex-wrap ml-3">
                    <a class="btn btn-secondary m-2 text-light"
                       href="{{ path('admin_spectacles_edit', {'id': spectacle.id}) }}">Editer</a>

                    {{ include('admin_spectacle/_delete_form.html.twig') }}
                </div>

            </div>
        {% else %}

            <h2>Aucun spectacle</h2>

        {% endfor %}

    </div>
{% endblock %}
