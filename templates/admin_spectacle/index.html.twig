{% extends 'layout.html.twig' %}

{% block title %}Admin - Spectacles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="m-3 mt-5">Spectacles</h1>

        <a class="btn btn-secondary m-3" href="{{ path('admin_spectacles_new') }}">Ajouter <i class="fas fa-plus-circle"></i></a>

        {% for spectacle in spectacles %}

            <div class="d-flex justify-content-between m-3 p-2 bg-dark-color rounded text-light flex-wrap">

                <div class="d-flex justify-content-between">
                    <p class="m-3">{{ spectacle.town }}</p>
                <p class="m-3">{{ spectacle.date ? spectacle.date|date('d M Y') : '' }}</p>
                <p class="m-3">{{ spectacle.date ? spectacle.date|date('H:i') : '' }}</p>
                </div>

                <div class="d-flex flex-wrap ml-3">
                <a class="btn btn-secondary m-2 text-light" href="{{ path('admin_spectacles_edit', {'id': spectacle.id}) }}">Editer</a>

                {{ include('admin_spectacle/_delete_form.html.twig') }}
                </div>

            </div>
        {% else %}

            <h2>Aucun spectacle</h2>

        {% endfor %}

    </div>
{% endblock %}
