{% extends 'layout.html.twig' %}

{% block title %}Spectacles{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="m-3 mt-5 mb-5">Toutes les dates</h1>

        {% for spectacle in spectacles %}

            <div class="d-flex justify-content-between m-3 p-2 bg-dark-color rounded text-light flex-wrap">

                <div class="d-flex w-75 flex-wrap">
                    <p class="m-3 mx-auto">{{ spectacle.town }}</p>
                    <p class="m-3 mx-auto">{{ spectacle.date ? spectacle.date|date('d M Y') : '' }}</p>
                    <p class="m-3 mx-auto">{{ spectacle.date ? spectacle.date|date('H:i') : '' }}</p>
                </div>

                <div class="d-flex flex-wrap ml-3">
                    <a class="btn btn-secondary m-2 text-light"
                       href="{{ path('spectacles_show', {'id': spectacle.id}) }}">
                        Voir
                    </a>

                </div>

            </div>
        {% else %}

            <h2 class="m-5">Aucun spectacle pour le moment</h2>

        {% endfor %}

    </div>
{% endblock %}
